
<% layout("/layouts/boilerplate")-%>

<style>
  .filter{
    margin-top: 1rem;
    text-align: center;
    margin-right: 2rem;
    margin-top: 2rem;
    opacity: 0.7;
  }
  .filter:hover{
    opacity: 1;
    cursor: pointer;
  }
  #filters{
    display: flex;
    flex-wrap: wrap;
    align-items: center;
  }
  .filter p{
    font-size: 0.8rem;
  }
  .tax-info{
    display: none;
  }
  .tax-toggle{
    border: 1px solid black;
    border-radius: 1rem;
    height: 3.25rem;
    padding: 1rem;
    margin-left: 1.8rem;
    display: flex;
    align-items: center;
    white-space: nowrap;
  }
   @media screen and (max-width: 768px) {
    #filters {
      flex-wrap: nowrap;
      overflow-x: auto;
      scroll-behavior: smooth;
    }

    .filter {
      flex: 0 0 auto;
      min-width: 4rem;
      margin-right: 1rem;
    }

    .tax-toggle {
      display: none; /* optional: hide tax toggle for small screens */
    }

    #filters::-webkit-scrollbar {
      height: 5px;
    }

    #filters::-webkit-scrollbar-thumb {
      background-color: #aaa;
      border-radius: 10px;
    }
  }
</style>

<div id="filters">
  <div class="filter">
   <a href="/listings" style="color: inherit; text-decoration: none;"><i class="fa-solid fa-globe"></i> </a>
    <p>All</p>
  </div>

  <div class="filter">
   <a href="/listings/category/Trending" style="color: inherit; text-decoration: none;"><i class="fa-solid fa-fire-flame-curved"></i> </a>
    <p>Trending</p>
  </div>

  <div class="filter">
   <a href="/listings/category/Rooms" style="color: inherit; text-decoration: none;"><i class="fa-solid fa-bed"></i></a> 
    <p>Rooms</p>
  </div>

  <div class="filter">
   <a href="/listings/category/Beach" style="color: inherit; text-decoration: none;"><i class="fa-solid fa-umbrella-beach"></i> </a>
    <p>Beach</p>
  </div>

  <div class="filter">
    <a href="/listings/category/Pools" style="color: inherit; text-decoration: none;"><i class="fa-solid fa-person-swimming"></i></a>
    <p>Pools</p>
  </div>

  <div class="filter">
    <a href="/listings/category/LakeFront" style="color: inherit; text-decoration: none;"><i class="fa-solid fa-water"></i></a>
    <p>LakeFront</p>
  </div>

  <div class="filter">
    <a href="/listings/category/MountainCity" style="color: inherit; text-decoration: none;"><i class="fa-solid fa-mountain-city"></i></a>
    <p>MountainCity</p>
  </div>

  <div class="filter">
    <a href="/listings/category/Castles" style="color: inherit; text-decoration: none;"><i class="fa-brands fa-fort-awesome"></i></a>
    <p>Castles</p>
  </div>

   <div class="filter">
    <a href="/listings/category/Camping" style="color: inherit; text-decoration: none;"><i class="fa-solid fa-tent"></i></a>
    <p>Camping</p>
  </div>

  <div class="filter">
   <a href="/listings/category/Farm" style="color: inherit; text-decoration: none;"> <i class="fa-solid fa-tractor"></i></a>
    <p>Farm</p>
  </div>

  <div class="filter">
    <a href="/listings/category/Arctic" style="color: inherit; text-decoration: none;"><i class="fa-solid fa-snowflake"></i></a>
    <p>Arctic</p>
  </div>

  <div class="filter">
    <a href="/listings/category/Dome" style="color: inherit; text-decoration: none;"><i class="fa-solid fa-igloo"></i></a>
    <p>Dome</p>
  </div>

  <div class="filter">
   <a href="/listings/category/HouseBoat" style="color: inherit; text-decoration: none;"><i class="fa-solid fa-sailboat"></i></a>
    <p>HouseBoat</p>
  </div>

  <div class="filter">
   <a href="/listings/category/Building" style="color: inherit; text-decoration: none;"><i class="fa-solid fa-building"></i></a>
    <p>Building</p>
  </div>

  <div class="tax-toggle">
    <div class="form-check-reverse form-switch">
  <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
  <label class="form-check-label" for="switchCheckDefault">Prices including taxes</label>
    </div>
  </div>

</div>
<body>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
        <%for(let listing of allListings){%>
        <a href="/listings/<%=listing._id%>" class="listing-link">
    <div class="card col listing-card" >
  <img src="<%=listing.image.url%>" class="card-img-top" alt="listing-image" style="height:20rem">

  <div class="card-img-overlay">
  </div>

  <div class="card-body">
    <p class="card-text"><b><%=listing.title%></b>
    <br>
    <%=listing.price.toLocaleString("en-IN")%> / night <i class="tax-info">+18% GST
    </i></p>
    
  </div>
</div>
</a>
<%}%>
    </div>
    
    
</body>
<script>
  let taxSwitch=document.getElementById("switchCheckDefault");
  taxSwitch.addEventListener("click",()=>{
    let taxInfo=document.getElementsByClassName("tax-info");
    for(info of taxInfo){
      if(info.style.display!="inline"){
        info.style.display="inline";
      }
      else{
        info.style.display="none"
      }
      
    }
  })
</script>
